<% include ./../helpers/format-date %>
<% include ./../helpers/format-summary %>
<%
    const folder_uploads = 'uploads/products/';
%>

<!-- Popular Products -->
<section class="padding-top-50 padding-bottom-100" style="border-bottom: 1px solid #d1d5db;">
    <div class="container"> 
      
      <!-- Main Heading -->
      <div class="heading text-center" style="
      margin-bottom: 40px;
  " >
        <h4>Đồng hồ bán chạy</h4>
        <span></span> </div>
      
      <!-- Popular Item Slide -->
      <div class="papular-block block-slide"> 
  
        <% for(let i = 0; i < itemsSpecial.length; i++){ %>
        <!-- Item -->
        <div class="item"> 
          <%  if (itemsSpecial[i].discount > 0){ %> 
            <div class="on-sale" style="left: 0px;"> 
            <%= itemsSpecial[i].discount %>  % <span>OFF</span> </div>
          <% } %> 
          <!-- Item img -->
          <div class="item-img"> <img class="img-1"src="<%= folder_uploads + itemsSpecial[i].avatar[0] %>" alt="<%= itemsSpecial[i].name %>" > <img class="img-2" src="<%= folder_uploads + itemsSpecial[i].avatar[1] %>" alt="<%= itemsSpecial[i].name %>" > 
            <!-- Overlay -->
            <div class="overlay">
              <div class="position-center-center">
                <div class="inn"><a href="sales/product/<%= itemsSpecial[i].slug %>" ><i class="icon-magnifier"></i></div>
              </div>
            </div>
          </div>
          <!-- Item Name -->
          <div class="item-name"> <a href="sales/product/<%= itemsSpecial[i].slug %>"><%= itemsSpecial[i].name %></a>
            
          </div>
          <!-- Price --> 
          <span class="price">
            <% if(itemsSpecial[i].discount > 0) { %>
              <del><small>đ</small><%= formatMoney(itemsSpecial[i].price) %></del> <small>đ</small><%= formatMoney(itemsSpecial[i].price - (itemsSpecial[i].price * (itemsSpecial[i].discount/100))) %>
            <% } else { %>
              <small>đ</small><%= formatMoney(itemsSpecial[i].price) %>
            <% } %>
          </span> </div>
        
        <% } %>
        
      </div>
    </div>
  </section>