<% include ./../../helpers/format-date %>
 <% include ./../../helpers/format-summary %>
 <% const folder_uploads = 'uploads/articles/';
%>

<%= //JSON.stringify(itemMainCategory)  %> 
<div class="col-lg-8 col-md-8">
	<div class="content_bottom_left">
		<div class="single_page_area">
			<ol class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li><a href="/category/<%= itemMainCategory.slug %>"	><%= itemArticle.group.name %></a></li>
				<li class="active"><%= itemArticle.name %></li>
			</ol>
			<h2 class="post_titile"><%= itemArticle.name %></h2>
			<div class="single_page_content">
				<div class="post_commentbox">
					<a><i class="fa fa-user"></i><%= itemArticle.created.user_name %></a>
					<span><i class="fa fa-calendar"></i><%- formatDate(itemArticle.created.time) %></span>
					<a href="/category/<%= itemMainCategory.slug %>"><i class="fa fa-tags"></i><%= itemArticle.group.name %></a>
				</div>
				<img class="img-center" src="<%= folder_uploads + itemArticle.avatar %>" alt="<%= itemArticle.name %>" />
				<p>
					<%- itemArticle.content %>
				</p>
			</div>
		</div>
	</div>

 
	<div class="similar_post">
        <% if(itemsOthers.length > 0) { %>
		<h2>Similar Post You May Like <i class="fa fa-thumbs-o-up"></i></h2>
		<ul class="small_catg similar_nav wow fadeInDown animated">
            <% for(let i = 0; i < itemsOthers.length; i++){ %>
			<li>
				<div
					class="media wow fadeInDown animated"
					style="visibility: visible; animation-name: fadeInDown"
				>
					<a class="media-left related-img" href="/article/<%= itemsOthers[i].slug %>"
						><img src="<%= folder_uploads + itemsOthers[i].avatar %>" alt="<%= itemsOthers[i].name %>"
					/></a>
					<div  style="float: left;" class="media-body">
						<h4 class="media-heading">
							<a href="/article/<%= itemsOthers[i].slug %>"><%= itemsOthers[i].name %></a>
						</h4>
						
					</div>
				</div>
			</li>
            <% } %>
		</ul>
        <% } %>
	</div>
</div>
